<% if current_user.role == "admin" %> 
<%= form_for(book_user) do |f| %>
  <% if book_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book_user.errors.count, "error") %> prohibited this book_user from being saved:</h2>

      <ul>
      <% book_user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class ="row">
  <div class="col-md-6">

  <div class="field">
    <%= f.label :book_id %>
    <%=  f.collection_select :book_id, Book.all , :id, :name, {prompt:"select book" } , 
    class: "form-control" , required: true , disabled: true %>
  </div>

  <div class="field">
    <%= f.label :user_id %>
    <%= f.collection_select :user_id, User.all , :id, :email, {prompt:"select user" } , 
    class: "form-control" , required: true ,disabled: true %>
  </div>

  <div class="field">
    <%= f.label :from %>
    <%= f.date_select :from , disabled: true%>
  </div>

  <div class="field">
    <%= f.label :to %>
    <%= f.date_select :to %>
  </div>

  <div class="field">
    <%= f.label :status_id %>
    <%= f.collection_select :status_id, status_updatable , :id, :name, {prompt:"select status", include_blank: true } , 
    class: "form-control" , required: true %>
  </div>

  <div class="row">
    <div class="col-md-9">
      <div class="actions">
        <%= f.submit :class => "btn btn-success" %>
      </div>
    </div>
    <div class ="col-md-3">
      <%= link_to 'Cancel', book_users_path ,:class => "btn btn-danger" %>
    </div>
  </div>
  </div>
  </div>
<% end %>
<% end %>
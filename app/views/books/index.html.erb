<h1>Browse Books</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Category</th>
      <% if current_user.role == "admin" %>
        <th>Total Books</th>
        <th> Total Borrowed </th>
      <% end %>
        <th> Available </th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= book.category.name %></td>
        <% if current_user.role == "admin" %>
          <td><%= book.availability %></td>
          <td> <%= book.borrowed_count.to_i %></td>
        <% end %>
        <td> <%= book.availability - book.borrowed_count.to_i %></td>
        <% if can? :update, book %>
          <td><%= link_to 'Show', book %>|
          <%= link_to 'Edit', edit_book_path(book) %>|
          <%#= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%  elsif can? :read, book  %>
          <td>
            <%# if book_borrowed(current_user,book.id)%>
            <% if ((book_borrowed(current_user,book.id)) || (book_borrowed_status(current_user,book.id)))%>
              <button class= "btn btn-success borrow-book" id="<%= book.id %>">
                Borrow Now
              </button>                
            <% else %>
               <button class= "btn btn-primary">
                Borrowed!
              </button>
            <% end %>
          </td> 
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.role == "admin" %>
  <%= link_to 'New Book', new_book_path %>
<% end %>